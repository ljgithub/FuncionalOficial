            <x:String x:Key="TextMedicity">#ffffff</x:String>
            
            <Style x:Key="buttonStyle" TargetType="Button">
                <Setter Property="BackgroundColor" Value="{DynamicResource backgroundColor}"/>
                <Setter Property="TextColor" Value="{DynamicResource textColor}" />
                <Setter Property="BorderRadius" Value="23"/>
                <Setter Property="BorderWidth" Value="1"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="HeightRequest" Value="46"/>
                <Setter Property="Margin" Value="5,0"/>
            </Style>
            <Style x:Key="labelWhiteStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#FFFFFF"/>
                <Setter Property="Margin" Value="0,0,0,0"/>
                <Setter Property="FontFamily" Value="MYRIADPRO-REGULAR"/>
                <Setter Property="FontSize" Value="20"/>
            </Style>

            <Style x:Key="labelGreyStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#595959"/>
                <Setter Property="Margin" Value="20,10,20,10"/>
                <Setter Property="FontFamily" Value="MYRIADPRO-REGULAR"/>
                <Setter Property="FontSize" Value="14"/>
            </Style>

            <Style x:Key="labelGreyTitlesStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#808080"/>
                <Setter Property="Margin" Value="20,10,20,10"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontFamily" Value="BEBASNUE-REGULAR"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            <Style x:Key="labelRedTitlesStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#ed1c2e"/>
                <Setter Property="Margin" Value="20,10,20,10"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="FontFamily" Value="BEBASNUE-REGULAR"/>
                <Setter Property="FontSize" Value="16"/>
            </Style>
            <Style x:Key="labelSmallGreyStyle" TargetType="Label">
                <Setter Property="TextColor" Value="#595959"/>
                <Setter Property="Margin" Value="0,0,0,0"/>
                <Setter Property="FontFamily" Value="MYRIADPRO-REGULAR"/>
                <Setter Property="FontSize" Value="12"/>
            </Style>
            <Color x:Key="BackgroundColor">#ffffff</Color>
            <Color x:Key="textColor">#4c9555</Color>

